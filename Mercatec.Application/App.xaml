<Application
    x:Class="Mercatec.Application.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Local="using:Mercatec.Application"
    xmlns:Converters="using:Mercatec.Helpers.Converters"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

                <!-- Other merged dictionaries here -->
                <ResourceDictionary Source="ms-appx:///Resources/Mercatec.Resources.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/Buttons.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Other app resources here -->

            <!-- Converters -->
            <Converters:BoolNegationConverter x:Key="BoolNegationConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>

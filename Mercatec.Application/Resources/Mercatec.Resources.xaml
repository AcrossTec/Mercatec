<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Local="using:Mercatec.Application">

    <x:String x:Key="AppName">Mercatec</x:String>
    <x:String x:Key="IconPath">Assets/LockScreenLogo.scale-200.ico</x:String>

    <SolidColorBrush x:Key="PrimaryColor">#1B1464</SolidColorBrush>
    <SolidColorBrush x:Key="IconColor">#330099</SolidColorBrush>

    <SolidColorBrush x:Key="DetailsViewBackgroundColor" Color="#F5F5F5" />

    <!--  Colors  -->
    <SolidColorBrush x:Key="Information" Color="RoyalBlue" />
    <SolidColorBrush x:Key="Warning" Color="#ffff00" />
    <SolidColorBrush x:Key="Error" Color="#ce0e0e" />

</ResourceDictionary>
